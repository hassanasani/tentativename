name: Deploy to GitHub Pages

on:
  push:
    branches:
      - gh-pages  # Replace with your branch name if it's not 'main'

jobs:
  build-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Ruby
        uses: ruby/setup-ruby@v1
        with:
          ruby-version: 3.0
          bundler-cache: true

      - name: Install dependencies
        run: |
          bundle install

      - name: Inject API key and build the site
        env:
          FORM_API_KEY: ${{ secrets.FORM_API_KEY }}
        run: |
          echo "Injecting API key"
          sed -i "s/API_KEY_PLACEHOLDER/$FORM_API_KEY/g" _pages/contact.md
          bundle exec jekyll build

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./_site









